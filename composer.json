{
  "name": "jascha030/cli",
  "description": "Service class for executing shell commands using symfony/process, heavily inspired by the CommandLine class in laravel/valet.",
  "keywords": [
    "php",
    "console",
    "CLI",
    "shell",
    "service",
    "symfony-console",
    "symfony-process"
  ],
  "authors": [
    {
      "name": "Jascha030",
      "email": "contact@jaschavanaalst.nl"
    }
  ],
  "license": "MIT",
  "autoload": {
    "files": [
      "includes/helpers.php"
    ],
    "psr-4": {
      "Jascha030\\CLI\\Shell\\": "src/Shell/"
    }
  },
  "minimum-stability": "stable",
  "autoload-dev": {
    "psr-4": {
      "Jascha030\\CLI\\Tests\\": "tests/",
      "Jascha030\\CLI\\Composer\\": "src/Composer/"
    }
  },
  "require": {
    "php": ">=8.3",
    "symfony/process": "^7.0||^8.0",
    "symfony/console": "^7.0||^8.0"
  },
  "require-dev": {
    "bamarni/composer-bin-plugin": "^1.9",
    "roave/security-advisories": "dev-latest"
  },
  "scripts": {
    "post-install-cmd": [
      "@install-phive-dependencies"
    ],
    "install-phive-dependencies": [
      "@putenv XDEBUG_MODE=off",
      "@putenv COMPOSER_ALLOW_SUPERUSER=1",
      "phive install --trust-gpg-keys 4AA394086372C20A 1> /dev/null",
      "@php -r \" ! file_exists('tools/phpunit.xsd') && (new Phar('tools/phpunit.phar'))->extractTo('tools', 'phpunit.xsd');\""
    ],
    "test": [
      "@putenv XDEBUG_MODE=coverage",
      "@php -d error_reporting=E_ALL -d display_errors=1 tools/phpunit.phar -c phpunit.xml"
    ],
    "format": "php-cs-fixer fix --config=.php-cs-fixer.dist.php"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "bamarni/composer-bin-plugin": true
    }
  },
  "extra": {
    "bamarni-bin": {
      "bin-links": true,
      "forward-command": true
    }
  }
}
